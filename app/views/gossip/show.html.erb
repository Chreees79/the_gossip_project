<div class="grid text-center">
  <div class="row row-cols-1 row-cols-md-2 g-4 d-flex align-items-center">
    <div class="g-col-5">
      <h3 class="p-3">Des précisions à propos de ce potin ?</h3>
      <%my_gossip = Gossip.find(params[:id])%>
      <h4 class="p-3">Titre: <%= my_gossip.title%></h4>
      <h5 class="p-3">Auteur: <%= link_to "#{my_gossip.user.first_name} #{my_gossip.user.last_name}", user_path(my_gossip.user.id), class:"author"%></h5>
      <blockquote class="blockquote>
        <p class="mb-0">Contenu: <%= my_gossip.content%></p>
      </blockquote>
      <p class="p-3">Créé le: <%= my_gossip.created_at.strftime("%d/%m/%Y à %Hh%M")%></p>
    </div>

    <div class="g-col-5">
      <img src="https://i.imgur.com/WFzrYz9.jpg" style="width: 80%">
    </div>
  </div>
</div>
