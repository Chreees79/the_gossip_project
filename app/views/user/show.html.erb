<div class="grid text-center">
  <div class="row row-cols-1 row-cols-md-2 g-4 d-flex align-items-center">
    <div class="g-col-5">
        <img src="https://i.imgur.com/VoLdiML.jpg" style="width: 80%">
    </div>
    <div class="g-col-5">
        <h1 class="p-3" style="color: rgb(110, 76, 7)">Fiche de l'auteur:</h1>
        <%my_author = User.find(params[:id])%>
        <h2 class="p-3"><%= "#{my_author.first_name} #{my_author.last_name}, #{my_author.age} ans" %></h2>
        <p class="p-3">description: <%= my_author.description %></p>
        <p class="p-3"><%= "email: #{my_author.email}"%></p>
        <p class="p-3">Ville: <%= my_author.city.name %></p>
    </div>
  </div>
</div>
